<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora de Economia Energética</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .widget-container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background: #f9f9f9;
        }
        .widget-container h3 {
            text-align: center;
        }
        .result {
            margin-top: 20px;
            font-size: 1.2em;
            text-align: center;
            background: #e6ffe6;
            padding: 10px;
            border-radius: 8px;
            display: none;
        }
    </style>
</head>
<body>
    <div class="widget-container">
        <h3>Calculadora de Economia Energética</h3>
        <label for="consumo">Consumo Médio Mensal (kWh):</label>
        <input type="number" id="consumo" placeholder="Ex.: 500" />

        <label for="tipo">Tipo de Estabelecimento:</label>
        <select id="tipo">
            <option value="residencial">Residencial</option>
            <option value="comercial">Comercial</option>
            <option value="industrial">Industrial</option>
        </select>

        <label for="fonte">Fonte Principal de Energia:</label>
        <select id="fonte">
            <option value="convencional">Geração Convencional</option>
            <option value="renovavel">Renovável</option>
            <option value="mista">Mista</option>
        </select>

        <button onclick="calcular()">Calcular Economia</button>

        <div class="result" id="resultado"></div>
    </div>

    <script>
        function calcular() {
            const consumo = parseFloat(document.getElementById('consumo').value);
            const tipo = document.getElementById('tipo').value;
            const fonte = document.getElementById('fonte').value;

            if (isNaN(consumo) || consumo <= 0) {
                alert("Por favor, insira um valor válido de consumo.");
                return;
            }

            let economiaPercentual = 0;
            let emissaoReduzida = 0;

            switch (tipo) {
                case "residencial":
                    economiaPercentual = 20;
                    break;
                case "comercial":
                    economiaPercentual = 25;
                    break;
                case "industrial":
                    economiaPercentual = 30;
                    break;
            }

            if (fonte === "renovavel") {
                economiaPercentual += 5;
            }

            const economia = (consumo * economiaPercentual) / 100;
            emissaoReduzida = economia * 0.5; // Aproximadamente 0.5kg CO₂ por kWh economizado.

            const resultadoDiv = document.getElementById('resultado');
            resultadoDiv.innerHTML = `
                <strong>Economia Estimada:</strong> ${economia.toFixed(2)} kWh/mês<br>
                <strong>Redução de Emissões:</strong> ${emissaoReduzida.toFixed(2)} kg CO₂/mês<br>
                <strong>Economia Percentual:</strong> ${economiaPercentual}%
            `;
            resultadoDiv.style.display = 'block';
        }
    </script>
</body>
</html>
